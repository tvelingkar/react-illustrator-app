{
  "name": "react-illustrator-app",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@ibm/plex": "^5.1.3",
    "carbon-components": "^10.7.4",
    "carbon-components-react": "^7.24.0",
    "carbon-icons": "^7.0.7",
    "lodash": "^4.17.15",
    "node-sass": "^4.13.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^4.0.0",
    "redux": "^4.0.4",
    "uuid": "^8.3.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "compress": "npx gzipper compress ./build",
    "test": "react-scripts test --silent --env=jsdom --coverage --testResultsProcessor jest-sonar-reporter",
    "eject": "react-scripts eject",
    "doctoc": "doctoc ./.github --title '## Table of Contents'",
    "format": "prettier src/**/*.{js,md,mdx,scss,json} --write",
    "format:check": "prettier src/**/*.{js,md,mdx,scss,json} --check",
    "format:diff": "prettier src/**/*.{js,md,mdx,scss,json} --list-different",
    "lint": "yarn lint:styles && yarn lint:js",
    "lint:js": "yarn eslint . --ext .js",
    "lint:styles": "yarn sass-lint 'src/**/*.scss -v -q'",
    "sonar": "node sonar-project.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "babel": {
    "env": {
      "production": {
        "plugins": [
          "transform-react-constant-elements",
          "transform-react-inline-elements"
        ]
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@welldone-software/why-did-you-render": "^5.0.0",
    "doctoc": "^1.4.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^2.1.2",
    "react-test-renderer": "^17.0.1",
    "sass-lint": "^1.13.1",
    "sonarqube-scanner": "^2.8.0"
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
